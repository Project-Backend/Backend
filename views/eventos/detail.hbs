<div class="container my-3">
    <div class="row row-cols-1 row-cols-md-2 align-items-start">
        <div class="col">
            <img class="img-fluid w-100" src="{{event.imgUrl}}" alt="imagen deporte" style="max-height: 500px;">
            <div class="mt-3">
                <h3>Jugadores Registrados ({{event.registros.length}})</h3>
                <ul style="list-style-type: none;">
                    {{#each event.registros as |registro|}}
                    <li>
                        <a href="/usuario/{{registro.user._id}}" style="text-decoration: none;">
                            <img class="rounded-circle border" src="{{registro.user.imgUrl}}" alt="profile picture" width="40">
                            {{registro.user.username}}
                        </a>
                    </li>
                    <hr>
                    {{/each}}
                </ul>
            </div>
        </div>
        <div class="col">
            <h1>{{event.nombreDelDeporte}}</h1>
            <p><strong>Fecha y Hora:</strong> {{event.fechaYHoraDelPartido}}</p>
            <p><strong>Tiempo de Inscripción:</strong> {{event.tiempoDeInscripcion}}</p>
            <p><strong>Duración del Partido:</strong> {{event.duracionDelPartido}}</p>
            <p><strong>Nivel del Partido (desde):</strong> {{event.nivel.desde}}</p>
            <p><strong>Nivel del Partido (hasta):</strong> {{event.nivel.hasta}}</p>
            <p><strong>Número de jugadores:</strong> {{event.numeroDeJugadores}}</p>
            {{#unless registroCerrado}}
            <form action="/eventos/{{event._id}}/registrar" method="POST">
                <button class="btn {{#if registrado}}btn-danger{{else}}btn-outline-danger{{/if}}">Registrar/Cancelar</button>
            </form>
            <hr>
            {{/unless}}
            <div class="mt-3">
                <h3>Organizador:</h3>
                <p><a href="/usuario/{{event.usuario._id}}" style="text-decoration: none;">{{event.usuario.username}}</a></p>
            </div>
        </div>
    </div>
</div>
